---
import dayjs from 'dayjs'

import BaseLayout from '$layouts/base.astro'
import EventPoster from '$components/eventPoster.astro'
import Head from '$commons/head.astro'
import CFImage from '$components/cfImage.astro'

import { getEvents } from '$functions/getEvents'
import { getWebsiteConfig } from '$functions/getWebsiteConfig'
import { upcomingEventsFilter } from '$functions/upcomingEventsFilter'

const now = dayjs()
const events = await getEvents()

const websiteConfig = await getWebsiteConfig()
const upcomingEvents = events.filter(upcomingEventsFilter).reverse()
// const upcomingEvents = events.filter(x => x.name.length < 18)
---

<Head title="Events" />

<BaseLayout
  class="relative mt-3 flex flex-col space-y-16 p-4 lg:mt-8 lg:space-y-20"
>
  {
    upcomingEvents.length !== 0 && (
      <section>
        <h1 class="text-3xl font-medium uppercase">Upcoming Events</h1>
        <div class="space-y-6 pt-8 md:grid-cols-2 lg:grid lg:gap-y-12 lg:space-y-0">
          {upcomingEvents.map(event => (
            <EventPoster event={event} />
          ))}
        </div>
      </section>
    )
  }
  <section>
    <!-- <h1 class="text-3xl font-medium uppercase">Series</h1> -->
    <div
      class="grid gap-4 lg:grid-cols-2 xl:grid-cols-4 [&>*]:p-4 [&>*]:lg:p-6"
    >
      {
        websiteConfig?.events.recurring.map(event => (
          <a class={`rounded-md border border-black`} href={event.url}>
            <p class="text-xl font-medium leading-snug lg:text-xl">
              {event.name}
            </p>
            <p class="mt-1 text-sm uppercase">{event.schedule}</p>
          </a>
        ))
      }
    </div>
  </section>

  <section class="pb-12">
    <div class="justify-between text-xl font-medium lg:flex lg:text-2xl">
      <div
        class="text-nowrap rounded-md border border-black bg-white px-3 py-2 text-black"
      >
        🌻 Past Events
      </div>
      <div class="mx-4 my-auto hidden w-full overflow-hidden lg:block">
        <img src="/images/wavy.svg" class="h-5" alt="" />
      </div>
      <div class="hidden items-center text-nowrap text-4xl lg:flex">
        💻 🏕️ 🏃‍♀️
      </div>
    </div>

    <div class="mt-6 grid grid-cols-2 gap-2 md:grid-cols-3 lg:grid-cols-5">
      {
        events
          .filter(event => event.date.isBefore(now))
          .map(event => (
            <a
              href={`/event/${event.id}`}
              class="overflow-hidden rounded-md border border-black"
            >
              <CFImage
                src={event.image}
                alt={event.name}
                width={300}
                ratio={1}
                class="w-full"
              />
            </a>
          ))
      }
    </div>
  </section>
</BaseLayout>
