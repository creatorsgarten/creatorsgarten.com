---
import BaseLayout from './base.astro'

export interface Props {
  frontmatter: {
    title?: string
  }
}

const { title = new URL(Astro.url).pathname.replace('/wiki/', '') } = Astro.props.frontmatter
---

<BaseLayout title={title}>
  <div class="cg-container">
    <h1 class="mt-16">{title}</h1>
    <article class="prose mt-8 max-w-none">
      <slot />
    </article>
  </div>
</BaseLayout>
